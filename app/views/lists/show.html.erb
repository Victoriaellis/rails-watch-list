<h1><%= @list.name %></h1>
<%= link_to "Create bookmark", new_list_bookmark_path(@list) %></button>
<%= link_to "Back to lists", lists_path %></button>
<div class="container">
  <div class="row">
  <% @list.bookmarks.each do |bookmark| %>

    <div class="col-3 movie-card">
      <img src="https://image.tmdb.org/t/p/w500<%= bookmark.movie.poster_url %>"/>
      <h2><%= bookmark.movie.title %></h2>
      <p> <%= bookmark.movie.overview %></p>
      <p><strong>Comments: <%= bookmark.comment %></strong></p>
      <button class="btn btn-primary"><%= link_to 'delete', bookmark_path(bookmark), method: :delete, class:"text-decoration-none" %></button>
    </div>
    <% end %>
    </div>
  </div>
